	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding-left: 20rpx;
	width: 370rpx;
}
.article-meta {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 30rpx;
	margin-bottom: 5rpx;
}
.article-meta-icon {
	width: 28rpx;
	height: 28rpx;
}
.article-meta-text {
	font-size: 28rpx;
	color: #A5A5A5;
}
