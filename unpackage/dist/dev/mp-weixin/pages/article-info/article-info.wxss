.article-good-title {
	font-size: 32rpx;
	font-weight: bold;
	padding-left: 20rpx;
	border-left: 10rpx solid #d02a09;
	margin-bottom: 40rpx;
}
.article-comment-title {
	font-size: 32rpx;
	font-weight: bold;
	padding-left: 20rpx;
	border-left: 10rpx solid #d02a09;
	margin-bottom: 40rpx;
}
